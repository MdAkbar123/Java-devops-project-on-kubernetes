pipeline {
    agent any
    
    // 1. Define Environment Variables
    environment {
        SCANNER_HOME = tool 'sonar-scanner' // Points to the SonarQube Scanner tool configured in Jenkins
    }
    
    // 2. Define Tools (Must match names in 'Global Tool Configuration')
    tools {
        jdk 'jdk17'     // You must configure a JDK named 'jdk17' in Jenkins
        maven 'maven3'  // You must configure Maven named 'maven3' in Jenkins
    }
    
    stages {
        // Stage 1: Get Code from Git
        stage('Git Checkout') {
            steps {
                // Replace with your specific repo URL and Credential ID
                git branch: 'main', credentialsId: 'git-cred', url: 'https://github.com/jaiswaladi246/Boardgame.git' 
            }
        }
        
        // Stage 2: Compile Java Code
        stage('Compile') {
            steps {
                sh "mvn compile"
            }
        }
        
        // Stage 3: Run Unit Tests
        stage('Test') {
            steps {
                sh "mvn test"
            }
        }
        
        // Stage 4: Security Scan on File System (Trivy)
        stage('Trivy File system scan') {
            steps {
                sh "trivy fs --format table -o trivy-fs-report.html ."
            }
        }
        
        // Stage 5: Code Quality Scan (SonarQube)
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube-Server') { // 'sonar' must match the Server Name in Configure System
                    sh '''
                    $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=BoardGame -Dsonar.projectKey=BoardGame -Dsonar.java.binaries=.
                    '''
                }
            }
        }
        
        // Stage 6: Quality Gate (Fail build if code quality is low)
        stage('Quality Gate') {
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }
        
        // Stage 7: Build the Application (JAR/WAR)
        stage('Build') {
            steps {
                sh "mvn package"
            }
        }
        
        // Stage 8: Upload Artifact to Nexus
        stage('Publish Artifacts to Nexus') {
            steps {
                // 'global-settings' refers to a Managed File in Jenkins with Nexus credentials
                withMaven(globalMavenSettingsConfig: 'global-settings', jdk: 'jdk17', maven: 'maven3', mavenSettingsConfig: '', traceability: true) {
                    sh "mvn deploy"
                }
            }
        }
        
        // Stage 9: Build Docker Image
        stage('Build and Tag Docker Image') {
            steps {
                script {
                    // Replace 'jaiswaladi246' with your DockerHub Username
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh "docker build -t akbar00/Boardgame:latest ."
                    }
                }
            }
        }
        
        // Stage 10: Scan Docker Image for Vulnerabilities
        stage('Docker Image Scan') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh "trivy image --format table -o trivy-image-report.html akbar00/Boardgame:latest"
                    }
                }
            }
        }
        
        // Stage 11: Push Image to Docker Hub
        stage('Push Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh "docker push akbar00/Boardgame:latest"
                    }
                }
            }
        }
        
        // Stage 12: Deploy to Kubernetes
        stage('Deploy to Kubernetes') {
            steps {
                // 'k8-cred' is a "Secret File" credential containing your kubeconfig
                withKubeConfig(caCertificate: '', clusterName: 'kubernetes', contextName: '', credentialsId: 'k8-cred', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://<K8S_MASTER_IP>:6443') {
                    sh "kubectl apply -f deployment-service.yaml"
                    sh "kubectl get pods -n webapps"
                }
            }
        }
    }
    
    // Post-Build Actions: Email Notifications
    post {
        always {
            script {
                def jobName = env.JOB_NAME
                def buildNumber = env.BUILD_NUMBER
                def pipelineStatus = currentBuild.result ?: 'UNKNOWN'
                def bannerColor = pipelineStatus.toUpperCase() == 'SUCCESS' ? 'green' : 'red'
                def body = """
                ${jobName} - Build ${buildNumber}
                Pipeline Status: ${pipelineStatus.toUpperCase()}
                Check the console output.
                """
                
                // Ensure 'Email Extension' plugin is installed and configured
                emailext(
                    subject: "${jobName} - Build ${buildNumber} - ${pipelineStatus.toUpperCase()}",
                    body: body,
                    to: 'iamakbar816@gmail.com', 
                    from: 'iamakbar816@gmail.com',
                    cc: 'iamakbar816@gmail.com',
                    replyTo: 'iamakbar816@gmail.com',
                    mimeType: 'text/html',
                    attachmentsPattern: 'trivy-image-report.html'
                )
            }
        }
    }
}